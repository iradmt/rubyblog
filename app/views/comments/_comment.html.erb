<div class='panel panel-default'>
	<div class='panel-heading'><%= link_to comment.user.name, user_path(comment.user.id) %> <span style="color: gray;"><%=time_ago_in_words(comment.created_at)%> ago</span></div>
	<div class='panel-body'><%=comment.text%></div>
	<% if can? :destroy, comment %>
		<div class='panel-footer'>
			<%= link_to 'Delete', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
	<% end %> 
</div>